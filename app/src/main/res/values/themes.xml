<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TouristAgency" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorForBackground">@color/color_for_background</item>
    </style>

    <style name="Theme.TouristAgency" parent="Base.Theme.TouristAgency" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
    </style>

    <style name="filtersMainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="filtersFromToText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4C4B4B</item>
    </style>

    <style name="CityDateDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ProfileTextViewsTheme">
        <item name="android:layout_marginTop">@dimen/profile_text_views_margin_top</item>
        <item name="android:layout_marginStart">@dimen/profile_text_views_margin_start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/profile_text_views_text_size</item>
    </style>

</resources>