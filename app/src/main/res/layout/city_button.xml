<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_for_city_button"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_name_tv"
        android:text="@string/city_button_city_name_default"
        android:textColor="@color/text_color_city_button_city"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/city_button_elements_margin_horizontal"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/days_number_tv"
        android:text="@string/city_button_date_default_text"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/city_button_elements_margin_horizontal"
        android:layout_marginBottom="@dimen/days_number_city_button_margin_bottom"
        android:textColor="@color/text_color_city_button_date"
        />


</LinearLayout>


